@{
    var returnUrl = ViewData["ReturnUrl"] as string;
    var error = TempData["Error"] as string;
}
<h1>Login</h1>
@if (!string.IsNullOrEmpty(error))
{
    <h2 class="alert-danger" style="padding:30px;">@error</h2>
}
<form action="/login?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)" method="post">
    <h1><input type="text" name="username" placeholder="Kullanıcı Adı" /></h1>
    <h1><input type="text" name="password" placeholder="Şifre" /></h1>
    <input type="submit" value="Login" />
</form>